<div class="kitten-card">
  <h1><%= @kitten.name %></h1>
  <p>Age: <%= @kitten.age %></p>
  <p>Cuteness: <%= @kitten.cuteness %></p>
  <p>Softness: <%= @kitten.softness %></p>

  <div class="kitten-actions flex mt-2">
    <%= link_to 'Edit', edit_kitten_path(@kitten), class: "btn btn-primary" %>
    <%= button_to 'Delete', @kitten, method: :delete, 
                  form: { data: { turbo_confirm: "Are you sure?" } }, 
                  class: "btn btn-danger" %>
    <%= link_to 'Back', kittens_path, class: "btn btn-primary" %>
  </div>
</div>
